{
  "name": "better-tanki-core",
  "version": "4.1.7",
  "description": "HTML5 client with plugin support for Tanki Online",
  "main": "build/wrapper.js",
  "author": "Assasans",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "start-hw": "electron --enable-accelerated-mjpeg-decode --enable-accelerated-video --ignore-gpu-blacklist --enable-native-gpu-memory-buffers --enable-gpu-rasterization .",
    "start-dev": "nodemon --exec \"electron .\"",
    "build": "tsc",
    "build-dev": "tsc --watch",
    "build-styles": "sass static/scss/:static/css/",
    "build-styles-dev": "sass --watch static/scss/:static/css/",
    "bundle-backend": "webpack-cli --production --progress",
    "bundle-backend-dev": "webpack-cli --development --progress --watch"
  },
  "build": {
    "appId": "tk.assasans.bettertanki",
    "productName": "BetterTanki",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*.js",
      "static/**/*.html",
      "static/**/*.css",
      "plugins/plugins.d.ts"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "@assasans/bitfield": "^1.0.0",
    "@assasans/storage": "^0.1.0",
    "app-root-path": "^3.0.0",
    "bluebird": "^3.7.2",
    "chalk": "^4.1.0",
    "classnames": "^2.2.6",
    "common-tags": "^1.8.0",
    "decimal.js": "^10.2.1",
    "decompress": "^4.2.1",
    "dompurify": "^2.2.6",
    "immutability-helper": "^3.1.1",
    "jquery": "^3.5.1",
    "lodash": "^4.17.21",
    "log4js": "^6.3.0",
    "luxon": "^1.26.0",
    "minimist": "^1.2.5",
    "promise-fs": "^2.1.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "redux-thunk": "^2.3.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "source-map-support": "^0.5.19",
    "ws": "^7.4.3",
    "xregexp": "^5.0.1"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/bluebird": "^3.5.33",
    "@types/classnames": "^2.2.11",
    "@types/common-tags": "^1.8.0",
    "@types/decompress": "^4.2.3",
    "@types/dompurify": "^2.2.1",
    "@types/jquery": "^3.5.5",
    "@types/lodash": "^4.14.168",
    "@types/luxon": "^1.26.0",
    "@types/minimist": "^1.2.1",
    "@types/node": "^14.14.31",
    "@types/promise-fs": "^2.1.1",
    "@types/react-dom": "^17.0.1",
    "@types/react-redux": "^7.1.16",
    "@types/react-router-dom": "^5.1.7",
    "@types/request": "^2.48.5",
    "@types/request-promise": "^4.1.47",
    "@types/ws": "^7.4.0",
    "@types/xregexp": "^4.3.0",
    "css-loader": "^5.1.0",
    "cssnano": "^4.1.10",
    "electron": "^15.5.5",
    "electron-builder": "^22.9.1",
    "nodemon": "^2.0.7",
    "postcss-loader": "^5.0.0",
    "sass": "^1.32.8",
    "sass-loader": "^11.0.1",
    "source-map-loader": "^2.0.1",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^8.0.17",
    "typescript": "^4.2.2",
    "webpack": "^5.24.2",
    "webpack-cli": "^4.5.0"
  }
}
